{
  "expo": {
    "name": "Pulse",
    "slug": "pulse",
    "version": "1.0.0",
    "orientation": "default",
    "userInterfaceStyle": "automatic",
    "scheme": "pulse",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "backgroundColor": "#F5F5F5",
      "resizeMode": "contain"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "dev.pulsetimer.app"
    },
    "android": {
      "package": "dev.pulsetimer.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#5A8AB8"
      },
      "permissions": [
        "INTERNET",
        "VIBRATE",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "blockedPermissions": [
        "com.google.android.gms.permission.AD_ID"
      ]
    },
    "web": {
      "favicon": "./assets/web/icon-192.png",
      "name": "Pulse - Pomodoro Timer with Spotify",
      "shortName": "Pulse Timer",
      "description": "A minimalist Pomodoro timer with Spotify integration to help you focus better. Free productivity app for time management and task tracking.",
      "themeColor": "#5A8AB8",
      "backgroundColor": "#F5F5F5",
      "lang": "en"
    },
    "plugins": [
      "expo-asset",
      "expo-audio"
    ],
    "extra": {
      "eas": {
        "projectId": "fa28ad9b-f825-4cc9-a9fe-2c6aa378f37e"
      }
    }
  }
}
